<odoo>
    <record id="view_res_partner_form_custom" model="ir.ui.view">
        <field name="name">res.partner.form.custom.bank.accounts</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']" position="inside">
                <group string="Bank Accounts">
                    <field name="custom_bank_account_ids" widget="many2many" options="{'no_create': True}">
                        <tree>
                            <field name="bank_name"/>
                            <field name="bank_branch"/>
                            <field name="bank_account"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
