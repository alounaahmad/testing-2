<odoo>


    <record id="action_view_partners_with_account" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('custom_bank_account_ids', 'in', active_id)]</field>
        <field name="context">{'create': False}</field>
    </record>

    <record id="view_custom_bank_account_form" model="ir.ui.view">
        <field name="name">custom.bank.account.form</field>
        <field name="model">custom.bank.account</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button string="Partners" type="object" name="action_view_related_partners" class="oe_stat_button" icon="terp-partner">
                                <field string="Partners" name="partner_count" widget="statinfo"/>
                            </button>
                    </div>
                    <group>
                        <group>
                            <field name="bank_name"/>
                            <field name="bank_branch"/>
                            <field name="bank_account"/>
                            <field name="responsible_id"/>
                        </group>
                        <group>
                            <field name="iban"/>
                            <field name="swift_code"/>
                            <field name="routing_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_custom_bank_account_tree" model="ir.ui.view">
        <field name="name">custom.bank.account.tree</field>
        <field name="model">custom.bank.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bank_name"/>
                <field name="bank_branch"/>
                <field name="bank_account"/>
            </tree>
        </field>
    </record>

    <record id="action_custom_bank_account" model="ir.actions.act_window">
        <field name="name">Custom Bank Accounts</field>
        <field name="res_model">custom.bank.account</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_custom_bank_account_tree"/>
    </record>

    <menuitem id="menu_custom_bank_account"
              name="Bank Accounts"
              parent="account.menu_finance_configuration"
              action="action_custom_bank_account"/>

</odoo>
